    <Style x:Key="FundedLineChartLegendItem" TargetType="DVC:LegendItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DVC:LegendItem">
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,5">
                        <Border Width="10" Height="20" Background="{StaticResource Brush2}"/>
                        <TextBlock VerticalAlignment="Center" Text="{Binding ElementName=FundingSeries, Path=Title}" FontWeight="Light" FontSize="12" 
                                   Foreground="{StaticResource LegendItem}" Margin="10"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

