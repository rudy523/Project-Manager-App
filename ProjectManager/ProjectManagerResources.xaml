                                    <ContentControl Content="{TemplateBinding IndependentValue}" VerticalContentAlignment="Center" HorizontalAlignment="Center"  Foreground="White" Grid.Column="2"/>
                                    <ContentControl Content="{TemplateBinding DependentValue, Converter={StaticResource CurrencyConverter}}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Foreground="White" Grid.Row="1"/>
                                </Grid>
