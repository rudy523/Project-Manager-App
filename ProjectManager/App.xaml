<Application x:Class="ProjectManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="CustomRectangles"  TargetType="Rectangle">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Height" Value="58"/>
            <Setter Property="Stroke" Value="Black" />
            <Setter Property ="VerticalAlignment" Value="Top"/>
            <Setter Property ="Width" Value="56"/>
            <Setter Property ="Margin" Value="0,10,0,0" /> 
        </Style>
        <Style x:Key="DefaultText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFCFD4E6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <BitmapImage x:Key="Money" UriSource="/Images/coin-us-dollar-icon.png"/>
